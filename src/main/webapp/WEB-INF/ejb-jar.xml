<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee"
        version="4.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
    
    <enterprise-beans>
        <session>
            <display-name>EmailServiceEjb</display-name>
            <ejb-name>EmailServiceEjb</ejb-name>
            <ejb-class>org.bjm.ejbs.EmailServiceEjb</ejb-class>
            <env-entry>
                <env-entry-name>mailSMTPHost</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>smtp.livemail.co.uk</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPPort</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>465</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPAuth</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>smtpStartTlsEnabled</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mailSMTPUser</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>admin@bjmanch.org</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>sender</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>admin@bjmanch.org</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>password</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>Wether@lDr69</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>webURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>http://localhost:8080/bjmanch/</env-entry-value>
            </env-entry>
           <env-entry>
                <env-entry-name>createAccessURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>createAccess.xhtml?email=%s</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>forumCreatedURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>forum/ForumDetails.xhtml?forumId=%s&amp;forumCreatorEmail=%s</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>surveyCreatedURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>survey/SurveyDetails.xhtml?surveyId=%s&amp;surveyCreatorEmail=%s</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>surveyCreatedFromForumURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>surveyFromForum/SurveyFromForumDetails.xhtml?surveyId=%s&amp;surveyCreatorEmail=%s</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>loginURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>login.xhtml</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>passwordResetURI</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>passwordReset.xhtml</env-entry-value>
            </env-entry>
        </session>
        
        <session>
            <display-name>ActivityServiceEjb</display-name>
            <ejb-name>ActivityServiceEjb</ejb-name>
            <ejb-class>org.bjm.ejbs.ActivityServiceEjb</ejb-class>
            <env-entry>
                <env-entry-name>zoneId</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>Asia/Kolkata</env-entry-value>
            </env-entry>
        </session>    
    </enterprise-beans>

</ejb-jar>
